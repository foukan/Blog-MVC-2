@model IEnumerable<BlogMvc.Models.CategoryModel>

@{
    ViewBag.Title = "Kategori";
}

<h2>Kategori</h2>
<hr />

<p>
    @Html.ActionLink("Yeni Kategori Ekle", "Create",null, new { @class = "btn btn-primary btn-xl" })
</p>
<hr />

@if (TempData["Kategori"] != null)
    {
        var kategori = (BlogMvc.Models.Category)TempData["Kategori"];

         <div class="alert alert-success">
      <span class="glyphicon glyphicon-ok"></span>
         <b>@kategori.KategoriAdi </b>Kayıt Edildi...
     </div>
    }

<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.BlogSayisi)
        </th>
        <th style="width:160px;"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @item.BlogSayisi
        </td>
        <td >
            @Html.ActionLink("Düzenle", "Edit", new { id=item.Id }, new { @class = "btn btn-warning btn-xs" }) 
            @Html.ActionLink("Detay", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" }) 
            @Html.ActionLink("Sil", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
